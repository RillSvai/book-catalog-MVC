@model Category

<div class="card shadow mt-4">
	<div class="card-header bg-dark text-white bg-gradient ml-0 py-3 rounded-top-2">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="py-2">Edit category</h2>
			</div>
		</div>
	</div>
	<div class="card-body border border-1 border-primary p-3 rounded-bottom-3">
		<form method="post" class="row px-3">
			<div class="border px-3">
				<div class="text-bg-danger bg-opacity-75" asp-validation-summary="All"></div>
				<div class="row mb-3">
					<label class="p-0 text-primary form-label" asp-for="Name"></label>
					<input class="form-control  mt-1" asp-for="Name" placeholder="Type name of category..." />
					<span class="text-danger" asp-validation-for="Name"></span>
				</div>
				<div class="row mb-3">
					<label class="p-0 text-primary form-label" asp-for="DisplayOrder"></label>
					<input class="form-control  mt-1" asp-for="DisplayOrder" placeholder="Type display of category..." />
					<span class="text-danger" asp-validation-for="DisplayOrder"></span>
				</div>
				<div class="row">
					<div class="col-md-3 col-6">
						<button type="submit" class="btn btn-primary form-control text-nowrap">
							Update
						</button>
					</div>
					<div class="col-md-3 col-6">
						<a asp-controller="Category" asp-action="Index" class="btn btn-dark border form-control text-nowrap">
							Back to list
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts
	{
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}