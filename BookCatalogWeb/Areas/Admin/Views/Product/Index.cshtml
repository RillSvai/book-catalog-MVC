@model IEnumerable<Product>
<div class="card shadow mt-4">
    <div class="card-header mb-2 ml-0 border-0 py-3 rounded-top-2">
        <div class="row">
            <div class="col-6 text">
                <h2 class="">
                    Product List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-controller="Product" asp-action="Upsert">
                    <i class="bi bi-plus-square"></i> Create new product
                </a>
            </div>
        </div>
    </div>
    <div class="card-body border-1 border-info p-0 rounded-bottom-3">
        <table id="tblData" class="w-100 table table-primary table-bordered table-group-divider">
            <thead>
                <tr>
                    <th>
                        Title of product
                    </th>
                    <th>
                        ISBN
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Name of category
                    </th>
                    <th>
                        Data Manipulation
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model)
                {
                    <tr>
                        <td>
                            @product.Title
                        </td>
                        <td>
                            @product.ISBN
                        </td>
                        <td>
                            @product.Author
                        </td>
                        <td>
                            @product.ListPrice
                        </td>
                        <td>
                            @product!.Category?.Name
                        </td>
                        <td>
                            <div class="btn-group w-100" role="group">
                                <a class="btn btn-primary mx-2 rounded-1" asp-controller="Product" asp-action="Upsert" asp-route-id="@product!.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-danger mx-2 rounded-1" asp-controller="Product" asp-action="Delete" asp-route-id="@product!.Id">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
