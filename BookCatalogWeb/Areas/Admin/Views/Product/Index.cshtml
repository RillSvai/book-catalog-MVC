
<div class="card shadow mt-4">
	<div class="card-header mb-2 ml-0 border-0 py-3 rounded-top-2">
		<div class="row">
			<div class="col-6 text">
				<h2 class="">
					Product List
				</h2>
			</div>
			<div class="col-6 text-end">
				<a class="btn btn-primary" asp-controller="Product" asp-action="Upsert">
					<i class="bi bi-plus-square"></i> Create new product
				</a>
			</div>
		</div>
	</div>
	<div class="card-body border-1 border-info p-0 rounded-bottom-3">
		<table id="tblProducts" class="w-100 table table-primary table-bordered table-group-divider">
			<thead>
				<tr>
					<th>
						Title of product
					</th>
					<th>
						ISBN
					</th>
					<th>
						Author
					</th>
					<th>
						Price
					</th>
					<th>
						Name of category
					</th>
					<th>
						Data Manipulation
					</th>
				</tr>
			</thead>
		</table>
	</div>
</div>

@section Scripts
{
	<script src="~/js/product.js"></script>
}