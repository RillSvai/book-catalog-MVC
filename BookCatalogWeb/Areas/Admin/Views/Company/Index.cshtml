@model IEnumerable<Company>
<div class="card shadow mt-4">
	<div class="card-header mb-2 ml-0 border-0 py-3 rounded-top-2">
		<div class="row">
			<div class="col-6 text">
				<h2 class="">
					Company List
				</h2>
			</div>
			<div class="col-6 text-end">
				<a class="btn btn-primary" asp-controller="Company" asp-action="Upsert">
					<i class="bi bi-plus-square"></i> Create new company
				</a>
			</div>
		</div>
	</div>
	<div class="card-body border-1 border-info p-0 rounded-bottom-3">
		<table id="tblCompanies" class="w-100 table table-primary table-bordered table-group-divider">
			<thead>
				<tr>
					<th>
						Name
					</th>
					<th>
						City
					</th>
					<th>
						State
					</th>
					<th>
						Postal Code
					</th>
					<th>
						Phone Number
					</th>
					<th>
						Data Manipulation
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach(Company company in @Model)
				{
					<tr>
						<td>
								@company.Name
						</td>
						<td>
								@company.City
						</td>
						<td>
								@company.State
						</td>
						<td>
								@company.PostalCode
						</td>
						<td>
								@company.PhoneNumber
						</td>
						<td>
							<div class="btn-group w-75" role="group">
								<a class="btn btn-primary mx-2 rounded-1" asp-controller="Company" asp-action="Upsert" asp-route-id="@company.Id">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
								<a class="btn btn-danger mx-2 rounded-1" asp-controller="Company" asp-action="Delete" asp-route-id="@company.Id">
									<i class="bi bi-trash3-fill"></i> Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
