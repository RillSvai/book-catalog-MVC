@model IEnumerable<ApplicationUser>

<div class="card shadow mt-4">
	<div class="card-header mb-2 ml-0 border-0 py-3 rounded-top-2">
		<div class="row">
			<div class="col-6 text">
				<h2 class="">
					User List
				</h2>
			</div>
		</div>
	</div>
	<div class="card-body border-1 border-info p-0 rounded-bottom-3">
		<table class="w-100 table table-primary table-bordered table-group-divider">
			<thead>
				<tr>
					<th>
						Name
					</th>
					<th>
						Email
					</th>
					<th>
						Phone
					</th>
					<th>
						Company
					</th>
					<th>
						Role
					</th>
					<th>
						Data Manipulation
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (ApplicationUser user in Model)
				{
					<tr>
						<td style="width: 15%">
							@user.Name
						</td>
						<td style="width: 15%">
							@user.Email
						</td>
						<td style="width: 15%">
							@user.PhoneNumber
						</td>
						<td style="width: 15%">
							@user.Company?.Name
						</td>
						<td style="width: 10%">
							@user.Role
						</td>
						<td style="width: 30%">	
							<div class="btn-group" role="group">
								@if (user.LockoutEnd is not null && user.LockoutEnd > DateTime.Now)
								{
									<a class="btn btn-success mx-2 rounded-1" asp-controller="User" asp-action="LockUnlock" asp-route-id="@user!.Id">
										<i class="bi bi-unlock"></i> Unlock
									</a>
								}
								else
								{
									<a class="btn btn-danger mx-2 rounded-1" asp-controller="User" asp-action="LockUnlock" asp-route-id="@user!.Id">
										<i class="bi bi-lock"></i> Lock
									</a>
								}
								<a class="btn btn-primary mx-2 rounded-1" asp-controller="User" asp-action="RoleManagament" asp-route-id="@user!.Id">
									<i class="bi bi-pencil-square"></i> Permission
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
